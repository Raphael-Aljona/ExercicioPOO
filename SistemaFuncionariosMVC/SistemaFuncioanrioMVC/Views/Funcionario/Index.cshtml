@model List<SistemaFuncioanrioMVC.Models.Funcionario>

<h2>Funcionários</h2>

<a asp-action="Criar" class="btn btn-primary">Novo funcionário</a>

<table>
    <tr>
        <th>Nome</th>
        <th>Cargo</th>
        <th>Salário Base</th>
        <th>Salário Final</th>
        <th>Ações</th>
    </tr>

    @foreach (var funcionario in Model)
    {
        <tr>
            <td>@funcionario.nome</td>
            <td>@funcionario.GetType().Name</td>
            <td>@funcionario.salarioBase</td>
            <td>@funcionario.CalcularSalario()</td>
            <td><a asp-action="Deletar" asp-route-id="@funcionario.id" class="btn btn-danger">Excluir</a> </td>
        </tr>
    }
</table>